<!doctype html>
<html lang="en" class="front-page">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="../public/style.css">
</head>
<body class="front-page">
<div class="container">
<h2>Sign Up</h2>
<form class="signup" action="/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <input id="username" type="text" name="username" placeholder="Your username">
  <br>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  <input id="firstName" type="text" name="firstName" placeholder="Your first name">
  <br>
  <input id="lastName" type="text" name="lastName" placeholder="Your last name">
  <br>
  <input id="department" type="text" name="department" placeholder="Your department">
  <br>
  <input id="position" type="text" name="position" placeholder="Your position">
  <br>
  <p class="account-message">Profile photo</p>
  <input id="image" type="file" name="image" placeholder="Your photo">
  <br>
  <button class="front-buttons" type="submit">Create account</button>
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
</form>
  <p class="account-message">
    Do you already have an account?
    </br>
    <br>
    <a href="/login">Login</a>
  </p>
  </div>
</body>
